<%# Gestion des erreurs %>

<% if @ingredient.errors.any? %>
    <h2><%= pluralize(@ingredient.errors.count, "erreur") %></h2>
    <ul>
        <% @ingredient.errors.each do |attr, msg| %>
            <li><%= "#{attr} #{msg}\n" if @ingredient.errors[attr].first == msg %></li>
        <% end %>
    </ul>
<% end %>
<%= form_for @ingredient, :html => {:class => 'form-horizontal'} do |f| %>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label"><%= f.label :title %></label>
        <div class="col-sm-10">
            <%= f.text_field :title, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label"><%= f.label :slug %></label>
        <div class="col-sm-10">
            <%= f.text_field :slug, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label"><%= f.label :description %></label>
        <div class="col-sm-10">
            <%= f.text_area :description, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label"><%= f.label :price %></label>
        <div class="col-sm-10">
            <%= f.text_field :price, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "ajouter", class: "btn btn-default" %>
        </div>
    </div>
<% end %>
