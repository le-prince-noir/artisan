<h2>Listing des commandes</h2>
<table class="table">
  <thead>
    <tr>
      <th>#</th>
      <th>Nom du client</th>
      <th>date</th>
      <th>Montant</th>
      <th></th>
    </tr>
  </thead>
<tbody>
  <% @orders.each do |order|%>
    <tr>
      <td><%= order.id %></td>
      <td><%= order.client.firstname %> <%= order.client.lastname %></td>
      <td><%= order.created_at %></td>
      <td><%= order.global_price %></td>
      <td><%= link_to 'Show', order_path(order.id), class: "btn btn-default" %></td>
    </tr>
  <% end %>
  </tbody>
</table>
