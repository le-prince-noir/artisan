<div class="panel panel-default">
  <div class="panel-body">
    <h2><%= @product.title %></h2>
    <p><%= @product.description %></p>
    <p>Création : <%= @product.created_at %></p>
    <p>Maj : <%= @product.updated_at %></p>
    <span class="badge"><%= @product.total %> €</span>
    <%= image_tag("products/"+@product.image, :class => "thumb") %>
  </div>
</div>
