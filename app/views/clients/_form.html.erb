<%# Gestion des erreurs %>

<% if @client.errors.any? %>
    <h2><%= pluralize(@client.errors.count, "erreur") %></h2>
    <ul>
        <% @client.errors.each do |attr, msg| %>
            <li><%= "#{attr} #{msg}\n" if @client.errors[attr].first == msg %></li>
        <% end %>
    </ul>
<% end %>
<%= form_for @client, :html => {:class => 'form-horizontal'} do |f| %>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label"><%= f.label :lastname %></label>
        <div class="col-sm-10">
            <%= f.text_field :lastname, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label"><%= f.label :firstname %></label>
        <div class="col-sm-10">
            <%= f.text_field :firstname, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label"><%= f.label :email %></label>
        <div class="col-sm-10">
            <%= f.email_field :email, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label"><%= f.label :tel %></label>
        <div class="col-sm-10">
            <%= f.text_field :tel, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <label for="inputEmail3" class="col-sm-2 control-label"><%= f.label :address %></label>
        <div class="col-sm-10">
            <%= f.text_area :address, class: "form-control" %>
        </div>
    </div>
    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <%= f.submit "ajouter", class: "btn btn-default" %>
        </div>
    </div>
<% end %>
